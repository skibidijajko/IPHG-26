body{
  font-family:Verdana,Arial,sans-serif;
  background:#eef2ff;
  margin:0;
  padding:20px;
  color:#000;
}

header{
  display:flex;
  align-items:center;
  border-bottom:2px solid #555;
  padding:10px 20px;
  margin-bottom:15px;
  background:#eef2ff;
}

header img{
  width:50px;
  height:50px;
  margin-right:12px;
}

header h1{
  font-size:28px;
  margin:0;
  color:#117743;
}

header p{
  font-size:12px;
  color:#555;
  margin-left:12px;
}

.boards button{
  background:#d6daf0;
  border:1px solid #b7c5d9;
  padding:6px 12px;
  margin:4px;
  border-radius:6px;
  cursor:pointer;
}
.boards button.active{background:#98a8c0;color:white}

.post-form{
  background:#d6daf0;
  padding:12px;
  border-radius:8px;
  margin-bottom:20px;
}

textarea{
  width:100%;
  height:90px;
  border-radius:6px;
  border:1px solid #aaa;
  padding:6px;
  margin-bottom:8px;
  font-family:monospace;
}

.post{
  background:#f0e0d6;
  border:1px solid #d9bfb7;
  padding:10px;
  margin-bottom:12px;
  border-radius:6px;
}

.anon{color:#117743;font-weight:bold}
.date{color:#555;font-size:12px;margin-left:6px}

img.post-img{max-width:260px;margin-top:8px;border-radius:4px}

.reactions{margin-top:8px}
.reactions button{
  font-size:12px;
  background:#e6e6e6;
  border:1px solid #bbb;
  border-radius:12px;
  padding:2px 8px;
  margin-right:4px;
  cursor:pointer;
}

#admin-btn{
  margin-top:12px;
  padding:6px 10px;
  cursor:pointer;
}

#admin-panel{
  border:1px solid #555;
  padding:10px;
  margin:10px 0;
}
